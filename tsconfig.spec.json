{
  "extends": "./tsconfig.json",
  "lib": ["jest"],
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jest",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts",
  ],
  "include": [
    "src/**/*.spec.ts",
  ],
  "exclude": [
    "src/**/*test.ts"
  ]
}
